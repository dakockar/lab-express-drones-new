<div class="container">
    <h2>Update the drone</h2>

    <form method="POST" action="/drones/{{drone._id}}/edit">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input value="{{drone.name}}" name="name" type="text" class="form-control input-field" id="name">
        </div>
        <div class="mb-3">
            <label for="propellers" class="form-label">Propellers</label>
            <input value="{{drone.propellers}}" name="propellers" type="number" class="form-control input-field"
                id="propellers">
        </div>
        <div class="mb-3">
            <label class="form-label" for="max-speed">Max Speed</label>
            <input value="{{drone.maxSpeed}}" name="maxSpeed" type="number" class="form-control input-field"
                id="max-speed">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
</div>